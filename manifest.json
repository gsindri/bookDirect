{
    "manifest_version": 3,
    "name": "bookDirect",
    "version": "1.0",
    "description": "Helps users on Booking.com by injecting a 'Price Check' UI.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.booking.com/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.booking.com/*"
            ],
            "js": [
                "src/components/PriceCheckUI.js",
                "src/content.js"
            ]
        }
    ],
    "action": {
        "default_title": "bookDirect"
    }
}