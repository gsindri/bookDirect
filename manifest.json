{
    "manifest_version": 3,
    "name": "bookDirect",
    "version": "1.0",
    "description": "Helps users on Booking.com by injecting a 'Price Check' UI.",
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "storage"
    ],
    "host_permissions": [
        "*://*.booking.com/hotel/*",
        "*://*.booking.com/searchresults*",
        "https://hotelfinder.gsindrih.workers.dev/*"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.booking.com/searchresults*"
            ],
            "js": [
                "src/logger.js",
                "src/searchPrefetch.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.booking.com/hotel/*"
            ],
            "js": [
                "src/logger.js",
                "src/components/OverflowDiagnostics.js",
                "src/components/PriceCheckUI.js",
                "src/content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_title": "bookDirect",
        "default_icon": {
            "16": "icons/bookDirect_icon1.png",
            "48": "icons/bookDirect_icon1.png",
            "128": "icons/bookDirect_icon1.png"
        }
    },
    "icons": {
        "16": "icons/bookDirect_icon1.png",
        "48": "icons/bookDirect_icon1.png",
        "128": "icons/bookDirect_icon1.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/bookDirect_icon1.png"
            ],
            "matches": [
                "https://*.booking.com/*"
            ]
        }
    ]
}